<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>

    <body>


        <!-- Sidebar Menu-->
        <%- include('../../partials/side-navbar') %>

            <!-- Navbar -->
            <%- include('../../partials/header') %>


                <!-- Pageheader -->

                <main class="page-header-3">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="title-hr"></div>
                            </div>
                            <div class="col-md-8 col-lg-6">
                                <h1>
                                    <%= about.title %>
                                </h1>
                            </div>
                        </div>
                    </div>
                </main>

                <div class="content">
                    <div class="content-entry-image" style="background-image: url('<%= about.img_url %>');">
                    </div>

                    <div class="page-inner">
                        <section class="section about-info">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-3">

                                    </div>
                                    <div class="col-md-9">
                                        <div class="text-display-1">
                                            <p>
                                                <%= about.content %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br>
                            <br>
                            <div class="post-video">
                                <div class="container">
                                    <div class="ratio ratio-16x9"> <!-- Makes video responsive -->
                                        <video controls class="rounded shadow" style="width: 100%; height: 100%;">
                                            <source src="<%= about.video_url %>" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                    </div>
                                </div>
                            </div>


                        </section>

                    </div>
                </div>

                <div class="wrapper boxed">
                    <%- include('../../partials/scripts') %>
                        <%- include('../../partials/footer') %>
                </div>

    </body>

</html>