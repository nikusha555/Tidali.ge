<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>

    <body>
        <div class="wrapper">
            <%- include('../../partials/side-navbar') %>
                <%- include('../../partials/header') %>

                    <div class="page-content">
                        <div class="page-container">
                            <div class="d-flex justify-content-center px-2">
                                <div class="col-12 col-sm-10 col-md-8 col-lg-6">
                                    <div class="card">
                                        <div class="card-header border-bottom border-dashed d-flex align-items-center">
                                            <h4 class="header-title">კონტაქტი რედაქტირება</h4>
                                        </div>

                                        <div class="card-body pt-3 pb-2">
                                            <!-- ✅ Edit Form -->
                                            <form action="/edit-contact" method="POST" enctype="multipart/form-data">

                                                <div class="row">
                                                    <!-- Image on the left -->
                                                    <div class="col-md-6 text-center mb-3">
                                                        <% if (contact.img_url) { %>
                                                            <img src="<%= contact.img_url %>" alt="Current Image"
                                                                class="img-fluid rounded shadow"
                                                                style="max-height: 250px;">
                                                            <% } %>

                                                                <!-- Upload new image trigger -->
                                                                <div class="dz-message needsclick mt-3"
                                                                    id="uploadTrigger" style="cursor:pointer;">
                                                                    <i class="ti ti-cloud-upload h1 text-muted"></i>
                                                                    <h4>ატვირთეთ ახალი სურათი</h4>
                                                                    <input name="image" id="imageInput" type="file"
                                                                        accept="image/*" hidden />
                                                                    <img id="imagePreview" src="" alt="Preview"
                                                                        class="img-fluid mt-3 d-none"
                                                                        style="max-height: 200px;" />
                                                                </div>
                                                    </div>
                                                </div>


                                                <!-- Form inputs -->
                                                <div class="mt-3">
                                                    <input type="text" class="form-control mb-3" name="title"
                                                        placeholder="სათაური" value="<%= contact.title %>" required>


                                                    <textarea class="form-control mb-3" name="email" rows="5"
                                                        placeholder="ტექსტი" required><%= contact.email %></textarea>
                                                </div>

                                                <!-- SEO Settings Collapse Toggle -->
                                                <div class="text-end mb-2">
                                                    <a class="btn btn-sm btn-outline-secondary"
                                                        data-bs-toggle="collapse" href="#seoSettings" role="button"
                                                        aria-expanded="false" aria-controls="seoSettings">
                                                        SEO პარამეტრები ▼
                                                    </a>
                                                </div>

                                                <!-- SEO Settings (Initially Collapsed) -->
                                                <div class="collapse" id="seoSettings">
                                                    <div class="card card-body border rounded shadow-sm mb-3">
                                                        <div class="form-group mb-3">
                                                            <label for="meta_description">მეტა
                                                                აღწერა</label>
                                                            <textarea class="form-control" name="m_description"
                                                                id="m_description" rows="2"
                                                                placeholder="მეტა აღწერა..."><%= contact.m_description %></textarea>
                                                        </div>

                                                        <div class="form-group mb-0">
                                                            <label for="meta_keywords">მეტა საკვანძო
                                                                სიტყვები</label>
                                                            <input type="text" class="form-control" name="m_keywords"
                                                                id="m_keywords" placeholder=""
                                                                value="<%= contact.m_keywords %>">
                                                        </div>
                                                    </div>
                                                </div> <br>
                                                <div class="d-flex justify-content-center">
                                                    <button type="submit" class="btn btn-success">შენახვა</button>
                                                </div>
                                        </div>
                                        </form>
                                    </div> <!-- end card-body -->
                                </div> <!-- end card -->
                            </div> <!-- end col -->
                        </div>
                    </div>
        </div>
        </div>

        <!-- JS to handle file preview -->
        <script>
            const trigger = document.getElementById('uploadTrigger');
            const input = document.getElementById('imageInput');
            const preview = document.getElementById('imagePreview');

            trigger.addEventListener('click', () => input.click());

            input.addEventListener('change', () => {
                const file = input.files[0];
                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        preview.src = e.target.result;
                        preview.classList.remove('d-none');
                    };
                    reader.readAsDataURL(file);
                }
            });

        </script>

        <%- include('../../partials/footer') %>
    </body>

</html>