<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>

    <body>
        <div class="wrapper">
            <%- include('../../partials/side-navbar') %>
                <%- include('../../partials/header') %>

                    <div class="page-content">
                        <div class="page-container">
                            <div class="d-flex justify-content-center px-2">
                                <div class="col-12 col-sm-10 col-md-8 col-lg-6">
                                    <div class="card">
                                        <div class="card-header border-bottom border-dashed d-flex align-items-center">
                                            <h4 class="header-title">დაამატეთ სერვისი</h4>
                                        </div>

                                        <div class="card-body pt-3 pb-2">
                                            <!-- ✅ Combine everything into one form -->
                                            <form action="/add-services" method="post" enctype="multipart/form-data">
                                                <div class="fallback">
                                                    <input name="image" id="imageInput" type="file" accept="image/*"
                                                        hidden />
                                                </div>

                                                <div class="dz-message needsclick" id="uploadTrigger"
                                                    style="cursor:pointer;">
                                                    <i class="ti ti-cloud-upload h1 text-muted"></i>
                                                    <h3>ატვირთეთ სურათი</h3>
                                                    <img id="imagePreview" src="" alt="Preview"
                                                        class="img-fluid mt-3 d-none" style="max-height: 200px;" />
                                                </div>

                                                <!-- Form inputs -->
                                                <div class="mt-3">
                                                    <input type="text" class="form-control mb-3" name="name"
                                                        placeholder="სერვისის სახელი" required>

                                                    <textarea class="form-control mb-3 textarea_editor" name="content"
                                                        rows="5" placeholder="სერვისის აღწერა"></textarea>
                                                    <br>
                                                    <!-- SEO Settings Collapse Toggle -->
                                                    <div class="text-end mb-2">
                                                        <a class="btn btn-sm btn-outline-secondary"
                                                            data-bs-toggle="collapse" href="#seoSettings" role="button"
                                                            aria-expanded="false" aria-controls="seoSettings">
                                                            SEO პარამეტრები ▼
                                                        </a>
                                                    </div>

                                                    <!-- SEO Settings (Initially Collapsed) -->
                                                    <div class="collapse" id="seoSettings">
                                                        <div class="card card-body border rounded shadow-sm mb-3">
                                                            <div class="form-group mb-3">
                                                                <label for="meta_description">მეტა აღწერა</label>
                                                                <textarea class="form-control" name="m_description"
                                                                    id="m_description" rows="2"
                                                                    placeholder="მეტა აღწერა..."></textarea>
                                                            </div>

                                                            <div class="form-group mb-0">
                                                                <label for="meta_keywords">მეტა საკვანძო
                                                                    სიტყვები</label>
                                                                <input type="text" class="form-control"
                                                                    name="m_keywords" id="m_keywords"
                                                                    placeholder="მაგ: არქიტექტურა, დიზაინი, ურბანული">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <br>

                                                    <select class="form-select form-select-lg mb-3"
                                                        name="service_type_id" required>
                                                        <option selected disabled>აირჩიეთ სერვისის კატეგორია</option>
                                                        <option value="1">საამზომველო</option>
                                                        <option value="2">არქიტექტურული</option>
                                                    </select>

                                                    <div class="d-flex justify-content-center">
                                                        <button type="submit" class="btn btn-info">დამატება</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div> <!-- end card-body -->
                                    </div> <!-- end card -->
                                </div> <!-- end col -->
                            </div>
                        </div>
                    </div>
        </div>

        <script>
            const trigger = document.getElementById('uploadTrigger');
            const input = document.getElementById('imageInput');
            const preview = document.getElementById('imagePreview');

            trigger.addEventListener('click', () => {
                input.click(); // Open file dialog
            });

            input.addEventListener('change', () => {
                const file = input.files[0];
                if (file && file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        preview.src = e.target.result;
                        preview.classList.remove('d-none');
                    };
                    reader.readAsDataURL(file);
                }
            });
        </script>
        <%- include('../../partials/tinyeditor') %>
            <%- include('../../partials/footer') %>
    </body>

</html>